<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chosen12.login.CreateAccountActivity"
    android:orientation="vertical"
    android:background="@drawable/image_05">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Account Profile"
                android:id="@+id/ProfileTextView"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textIsSelectable="true" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10sp">

                <TableRow
                    android:paddingTop="10sp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:id="@+id/IDTextView" />

                    <EditText
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/IDEditText"
                        android:layout_marginLeft="40sp"
                        android:layout_weight="20"
                        android:layout_column="1"
                        android:layout_span="40"
                        android:visibility="visible"
                        android:hint="ID" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:id="@+id/PasswordTextView" />

                    <EditText
                        android:layout_height="wrap_content"
                        android:id="@+id/PasswordEditText"
                        android:inputType="textPassword"
                        android:layout_marginLeft="40sp"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:hint="Password" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:id="@+id/NameTextView" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NameEditText"
                        android:inputType="textPersonName"
                        android:layout_marginLeft="40sp"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:hint="Name" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:id="@+id/AgeTextView" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/AgeEditText"
                        android:inputType="number"
                        android:layout_marginLeft="40sp"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:hint="Age" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sex"
                        android:id="@+id/SexTextView" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SexEditText"
                        android:inputType="number"
                        android:layout_marginLeft="30sp"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:entries="@array/sex_choose"
                        android:prompt="@string/sex_prompt"
                         />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:id="@+id/EmailTextView" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/EmailEditText"
                        android:inputType="textEmailAddress"
                        android:layout_marginLeft="40sp"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:hint="Email" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:id="@+id/PhoneTextView" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/PhoneEditText"
                        android:inputType="phone"
                        android:layout_marginLeft="40sp"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:hint="Phone" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:id="@+id/AddressTextView" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/AddressEditText"
                        android:layout_marginLeft="40sp"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:hint="Address" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="Country"
                        android:id="@+id/CountryTextView" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/CountryEditText"
                        android:layout_marginLeft="40sp"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:entries="@array/country_choose"
                        />
                </TableRow>

            </TableLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginLeft="220sp"
                android:layout_marginTop="30sp"
                android:id="@+id/SubmitButton" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
